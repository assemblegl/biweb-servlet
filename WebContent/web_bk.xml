<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>main</display-name>

  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>gl.servlet.loginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <env-entry>
       <env-entry-name>mysqlip</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>127.0.0.1</env-entry-value>
  </env-entry>
  
  <env-entry>
       <env-entry-name>mysqlport</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>3306</env-entry-value>
  </env-entry>

  <env-entry>
       <env-entry-name>ConnLanCode</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>utf-8</env-entry-value>
  </env-entry>
  
  <env-entry>
       <env-entry-name>conntimeout</env-entry-name>
       <env-entry-type>java.lang.Integer</env-entry-type>
       <env-entry-value>30</env-entry-value>
  </env-entry>

  <env-entry>
       <env-entry-name>dbname</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>userdb</env-entry-value>
  </env-entry>

  <env-entry>
       <env-entry-name>user_privi</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>web_java</env-entry-value>
  </env-entry>

  <env-entry>
       <env-entry-name>user_privi_passwd</env-entry-name>
       <env-entry-type>java.lang.String</env-entry-type>
       <env-entry-value>webjava9ol.8ik,</env-entry-value>
  </env-entry>
	
  <env-entry>
       <env-entry-name>sleeptime</env-entry-name>
       <env-entry-type>java.lang.Integer</env-entry-type>
       <env-entry-value>500</env-entry-value>
  </env-entry>
	
  <env-entry>
       <env-entry-name>reconnNum</env-entry-name>
       <env-entry-type>java.lang.Integer</env-entry-type>
       <env-entry-value>5</env-entry-value>
  </env-entry>
	
  <welcome-file-list>
    <welcome-file>main.html</welcome-file>
  </welcome-file-list>
  
</web-app>